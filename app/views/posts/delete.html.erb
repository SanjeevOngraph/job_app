<% if !flash[:notice].blank?%>
<div class = "notice">
	<%= flash[:notice]%>
</div>
<%end%>

<%= link_to("Back TO LIST",posts_path,:class => "btn btn-success")%>
<div class = "posts delete">
	<h1>Delete Post</h1>
	<%= form_for(@post,:url => post_path(@post),:method => 'delete') do |f| %>
	<p>Are you sure you want to delete</p>
	<p class = "reference-name"><%=@post.post_title%></p>
	<div class = "form-button">
		<%= f.submit "Delete Post", :class => "btn btn-danger"%>
	</div>
	<%end%>
</div>
