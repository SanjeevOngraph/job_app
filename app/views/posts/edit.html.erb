<% if !flash[:notice].blank?%>
<div class = "notice">
	<%= flash[:notice]%>
</div>
<%end%>

<%#= link_to("Back TO LIST",posts_path,:class => 'back-link')%>
<div class = "post new">
	<h1>Update Post</h1>
	<%= form_for(@post) do |f| %>	
	<table summary="fields for post">
		<tr>
			<th>Post Title</th>
			<td><%= f.text_field(:post_title)%></td>
		</tr>
		<tr>
			<th>Experience</th>
			<td><%= f.text_field(:experience) %></td>
		</tr>
		<tr>
			<th>Salery</th>
			<td><%= f.text_field(:salary) %></td>
		</tr>		
	</table>
	<div class = "form-button">
		<%= f.submit("Update Post")%>
	</div>
	<%end%>
</div>	
<%#=,:url => post_path(@post),:method => 'patch'%>
