<% if !flash[:notice].blank?%>
<div class = "notice">
	<%= flash[:notice]%>
</div>
<%end%>


<%#= link_to("Back TO LIST",post_path,:class => 'back-link')%>
<div class = "Job show">
	<h1>Show Post</h1>
	<table class="table">
		<tr>
			<th>Job Title</th>
			<td><%=@post.post_title%></td>
		</tr>
		<tr>
			<th>Experience</th>
			<td><%= @post.experience%></td>
		</tr>
		<tr>
			<th>Salery</th>
			<td><%= @post.salary %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @post.created_at%></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%=@post.updated_at%></td>
		</tr>
	</table>
</div>